<h1>Labels</h1>

<table class="table" id="cases">
  <% @labels.each do |desk_label| %>
  <tr>
    <td><%= desk_label['name'] %></td>
    <td>
      <%= form_tag('/cases/0') do %>
        <input name="_method" type="hidden" value="patch" />
        <%= hidden_field_tag :label, desk_label['name'] %>
        <input type="submit" class="btn btn-default" value="Assign to first case">
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to 'Create a new label', new_label_path %>